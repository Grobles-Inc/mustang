---
import Page from "../layouts/Page.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Page
  title="Contact Us - CARWASH"
  description="Get in touch with us for questions, bookings, or feedback"
  image="/logoCarWash.png"
>
  <div
    class="flex flex-col items-center justify-center md:mt-16 mt-4 leading-[2.0]"
  >
    <h2 class="lg:text-4xl text-2xl font-bold text-primary">Book a Service</h2>
    <span class="text-lg text-base-100">
      Get in touch with us for questions, bookings, or feedback
    </span>
  </div>
  <section
    class="flex flex-col-reverse md:flex-row justify-center mx-auto gap-4 md:py-16"
  >
    <div class="container max-w-2xl text-center flex-1" data-aos="zoom-in">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d199698.29495036788!2d-121.5726577!3d38.5502272!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x809ac672b28397f9%3A0x921f6aaa74197fdb!2sSacramento%2C%20California%2C%20EE.%20UU.!5e0!3m2!1ses!2spe!4v1753810789139!5m2!1ses!2spe"
        width="100%"
        height="450"
        style="border:0; border-radius: 20px; overflow: hidden;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <span class="divider before:bg-gray-200 after:bg-gray-200 md:hidden"
      >Our service area around Sacramento, CA</span
    >
    <ContactForm />
  </section>
</Page>
