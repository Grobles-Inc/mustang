---
import Page from "../layouts/Page.astro";
---

<Page
  title="Contact Us - CARWASH"
  description="Get in touch with us for questions, bookings, or feedback"
>
  <main class="min-h-screen bg-base-100">
    <!-- Hero Section -->
    <section
      class="hero bg-gradient-to-r from-primary to-secondary text-primary-content py-20"
    >
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-5xl font-bold">Contact Us</h1>
          <p class="py-6 text-lg">
            We'd love to hear from you. Send us a message and we'll respond as
            soon as possible.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 px-4 lg:px-8">
      <div class="container mx-auto max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
              <h2 class="card-title text-2xl text-primary mb-6">
                Send us a message
              </h2>
              <form class="space-y-4">
                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Name</span>
                  </label>
                  <input
                    type="text"
                    placeholder="Your name"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Email</span>
                  </label>
                  <input
                    type="email"
                    placeholder="your.email@example.com"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Phone</span>
                  </label>
                  <input
                    type="tel"
                    placeholder="(555) 123-4567"
                    class="input input-bordered w-full"
                  />
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Subject</span>
                  </label>
                  <select class="select select-bordered w-full">
                    <option disabled selected>Choose a subject</option>
                    <option>General Inquiry</option>
                    <option>Booking Question</option>
                    <option>Service Feedback</option>
                    <option>Business Partnership</option>
                  </select>
                </div>

                <div class="form-control">
                  <label class="label">
                    <span class="label-text font-medium">Message</span>
                  </label>
                  <textarea
                    class="textarea textarea-bordered h-32"
                    placeholder="Tell us how we can help you..."
                    required></textarea>
                </div>

                <div class="form-control mt-6">
                  <button class="btn btn-primary">Send Message</button>
                </div>
              </form>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="card bg-base-200 shadow-xl">
              <div class="card-body">
                <h2 class="card-title text-2xl text-primary mb-6">
                  Get in touch
                </h2>
                <div class="space-y-4">
                  <div class="flex items-center gap-4">
                    <div class="btn btn-circle btn-primary btn-sm">
                      <svg
                        class="size-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                        ></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">Phone</p>
                      <p class="text-sm opacity-70">(555) 123-WASH</p>
                    </div>
                  </div>

                  <div class="flex items-center gap-4">
                    <div class="btn btn-circle btn-primary btn-sm">
                      <svg
                        class="size-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                        ></path>
                        <path
                          d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                        ></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">Email</p>
                      <p class="text-sm opacity-70">info@carwash.com</p>
                    </div>
                  </div>

                  <div class="flex items-center gap-4">
                    <div class="btn btn-circle btn-primary btn-sm">
                      <svg
                        class="size-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">Address</p>
                      <p class="text-sm opacity-70">
                        123 Main Street<br />Downtown, City 12345
                      </p>
                    </div>
                  </div>

                  <div class="flex items-center gap-4">
                    <div class="btn btn-circle btn-primary btn-sm">
                      <svg
                        class="size-5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="font-medium">Hours</p>
                      <p class="text-sm opacity-70">Mon-Sun: 8AM - 8PM</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- FAQ -->
            <div class="card bg-base-200 shadow-xl">
              <div class="card-body">
                <h2 class="card-title text-2xl text-primary mb-6">
                  Frequently Asked Questions
                </h2>
                <div class="space-y-2">
                  <div class="collapse collapse-arrow bg-base-100">
                    <input
                      type="radio"
                      name="faq-accordion"
                      checked="checked"
                    />
                    <div class="collapse-title text-lg font-medium">
                      How long does a car wash take?
                    </div>
                    <div class="collapse-content">
                      <p>
                        Most services take 15-30 minutes depending on the
                        package you choose.
                      </p>
                    </div>
                  </div>

                  <div class="collapse collapse-arrow bg-base-100">
                    <input type="radio" name="faq-accordion" />
                    <div class="collapse-title text-lg font-medium">
                      Do I need to make an appointment?
                    </div>
                    <div class="collapse-content">
                      <p>
                        Walk-ins are welcome, but appointments ensure faster
                        service and your preferred time slot.
                      </p>
                    </div>
                  </div>

                  <div class="collapse collapse-arrow bg-base-100">
                    <input type="radio" name="faq-accordion" />
                    <div class="collapse-title text-lg font-medium">
                      What payment methods do you accept?
                    </div>
                    <div class="collapse-content">
                      <p>
                        We accept cash, credit cards, debit cards, and mobile
                        payments like Apple Pay and Google Pay.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Page>

