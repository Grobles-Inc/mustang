              <div class="card-actions justify-center">
                <button class="btn btn-primary btn-wide">Choose Premium</button>
              </div>
            </div>
          </div>

          <!-- Deluxe Package -->
          <div class="card bg-base-200 shadow-xl">
            <div class="card-body">
              <div class="text-center">
                <div class="badge badge-accent mb-4">DELUXE</div>
                <h2 class="card-title text-2xl text-primary justify-center">
                  Full Detail
                </h2>
                <div class="text-4xl font-bold text-primary my-4">$45</div>
              </div>

              <ul class="space-y-2 mb-6">
                <li class="flex items-center gap-2">
                  <svg
                    class="size-5 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Everything in Premium
                </li>
                <li class="flex items-center gap-2">
                  <svg
                    class="size-5 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Premium wax protection
                </li>
                <li class="flex items-center gap-2">
                  <svg
                    class="size-5 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Leather conditioning
                </li>
                <li class="flex items-center gap-2">
                  <svg
                    class="size-5 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Engine bay cleaning
                </li>
                <li class="flex items-center gap-2">
                  <svg
                    class="size-5 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  Air freshener
                </li>
              </ul>

              <div class="card-actions justify-center">
                <button class="btn btn-primary btn-wide">Choose Deluxe</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Services -->
    <section class="py-16 bg-base-200">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-primary mb-4">
            Additional Services
          </h2>
          <div class="divider"></div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <svg
                class="size-12 text-primary mx-auto mb-4"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                  clip-rule="evenodd"></path>
              </svg>
              <h3 class="card-title text-lg justify-center">Ceramic Coating</h3>
              <p class="text-sm opacity-70 mb-2">Long-lasting protection</p>
              <div class="text-2xl font-bold text-primary">$150</div>
            </div>
          </div>

          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <svg
                class="size-12 text-primary mx-auto mb-4"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <h3 class="card-title text-lg justify-center">
                Paint Correction
              </h3>
              <p class="text-sm opacity-70 mb-2">Remove scratches & swirls</p>
              <div class="text-2xl font-bold text-primary">$200</div>
            </div>
          </div>

          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <svg
                class="size-12 text-primary mx-auto mb-4"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <h3 class="card-title text-lg justify-center">
                Headlight Restoration
              </h3>
              <p class="text-sm opacity-70 mb-2">Crystal clear visibility</p>
              <div class="text-2xl font-bold text-primary">$75</div>
            </div>
          </div>

          <div class="card bg-base-100 shadow-lg">
            <div class="card-body text-center">
              <svg
                class="size-12 text-primary mx-auto mb-4"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                  clip-rule="evenodd"></path>
              </svg>
              <h3 class="card-title text-lg justify-center">
                Pet Hair Removal
              </h3>
              <p class="text-sm opacity-70 mb-2">Deep cleaning service</p>
              <div class="text-2xl font-bold text-primary">$35</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16">
      <div class="container mx-auto px-4 lg:px-8 text-center">
        <h2 class="text-4xl font-bold text-primary mb-4">
          Ready to get started?
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto">
          Book your appointment today and experience the difference professional
          car care makes.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/book" class="btn btn-primary btn-lg">Book Now</a>
          <a href="/contact" class="btn btn-outline btn-lg">Contact Us</a>
        </div>
      </div>
    </section>
  </main>
