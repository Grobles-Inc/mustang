---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileDrawer from "../components/MobileDrawer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
}

const { title, description, canonicalURL, image } = Astro.props;
const currentLocale = Astro.currentLocale || "en";
const url = new URL(Astro.request.url);
const canonical = canonicalURL || url.href;
---

<!doctype html>
<html lang={currentLocale} data-theme="carwash">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image || "/logoCarWash.png"} />
    <meta property="og:locale" content={currentLocale} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image || "/logoCarWash.png"} />
    
    <!-- Hreflang para internacionalización -->
    <link rel="alternate" hreflang="en" href={url.origin} />
    <link rel="alternate" hreflang="es" href={`${url.origin}/es`} />
    <link rel="alternate" hreflang="x-default" href={url.origin} />
    
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
  </head>
  <body>
    <div class="drawer">
      <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Header -->
        <Header />

        <!-- Main Content -->
        <main class="flex-1">
          <slot />
        </main>

        <!-- Footer -->
        <Footer />
      </div>

      <!-- Mobile Drawer -->
      <MobileDrawer />
    </div>
  </body>
</html>

<script>
  import AOS from "aos";
  
  // Inicializar AOS cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 500,
      once: true,
      offset: 120,
      delay: 100,
      easing: 'ease-in-out'
    });
  });

  // Refrescar AOS en navegación del lado del cliente
  document.addEventListener('astro:page-load', () => {
    AOS.refresh();
  });
</script>

<!-- Agregar después de los meta tags -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "WildHorse CarWash Mobile",
  "description": "Professional mobile car wash and detailing services in Sacramento, CA",
