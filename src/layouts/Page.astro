---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MobileDrawer from "../components/MobileDrawer.astro";
import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
}

const { title, description, canonicalURL, image } = Astro.props;
const currentLocale = Astro.currentLocale || "en";
const url = new URL(Astro.request.url);
const canonical = canonicalURL || url.href;

const whatsappMessages: Record<"en" | "es", string> = {
  en: "Hello, I need more information about car wash services.",
  es: "Hola, necesito más información sobre los servicios de lavado de autos."
};

const whatsappLabels: Record<"en" | "es", string> = {
  en: "Contact via WhatsApp",
  es: "Contactar por WhatsApp"
};

const localeKey = (["en", "es"].includes(currentLocale) ? currentLocale : "en") as "en" | "es";
const whatsappMessage = whatsappMessages[localeKey];
const whatsappLabel = whatsappLabels[localeKey];

---

<!doctype html>
<html lang={currentLocale} data-theme="carwash">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/logoCarWash.png" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={image || "/logoCarWash.png"} />
    <meta property="og:locale" content={currentLocale} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image || "/logoCarWash.png"} />
    
    <!-- Favicon meta tags para diferentes dispositivos -->
    <meta name="theme-color" content="#de652f" />
    <meta name="msapplication-TileImage" content="/logoCarWash.png" />
    <meta name="msapplication-TileColor" content="#de652f" />
    
    <!-- Hreflang para internacionalización -->
    <link rel="alternate" hreflang="en" href={url.origin} />
    <link rel="alternate" hreflang="es" href={`${url.origin}/es`} />
    <link rel="alternate" hreflang="x-default" href={url.origin} />
    
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
  </head>
  <body>
    <div class="drawer">
      <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Header -->
        <Header />

        <!-- Main Content -->
        <main class="flex-1">
          <slot />
        </main>

        <!-- Footer -->
        <Footer />
      </div>

      <!-- Mobile Drawer -->
      <MobileDrawer />
    </div>

    <!-- Botón flotante de WhatsApp -->
    <a 
      href={`https://wa.me/12792727136?text=${encodeURIComponent(whatsappMessage)}`}
      target="_blank" 
      rel="noopener noreferrer"
      class="whatsapp-float"
      aria-label={whatsappLabel}
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
      </svg>
    </a>
  </body>
</html>

<script>
  import AOS from "aos";
  
  // Inicializar AOS cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 500,
      once: true,
      offset: 120,
      delay: 100,
      easing: 'ease-in-out'
    });
  });

  // Refrescar AOS en navegación del lado del cliente
  document.addEventListener('astro:page-load', () => {
    AOS.refresh();
  });
</script>

<!-- Agregar después de los meta tags -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "WildHorse CarWash Mobile",
  "description": "Professional mobile car wash and detailing services in Sacramento, CA",
  "url": "https://wildhorsecarwashmobile.com/",
  "telephone": "+1 (279) 272-7136",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Sacramento",
    "addressRegion": "CA",
    "addressCountry": "US"
  },
}
</script>
