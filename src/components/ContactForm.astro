---
// Componente de formulario de contacto
import { handleFormSubmit } from "../utils/whatsapp";
---

<section class="py-20">
  <!-- Contenedor del formulario -->
  <div class="flex items-center justify-center p-4" data-aos="fade-up">
    <div
      class="bg-white bg-opacity-90 rounded-2xl shadow-2xl max-w-6xl w-full overflow-hidden"
    >
      <div class="grid md:grid-cols-2 gap-0">
        <!-- Sección izquierda - Información -->
        <div class="bg-gray-50 p-8 md:p-12">
          <h2 class="text-4xl font-bold text-gray-800 mb-6">Got Questions?</h2>

          <div class="space-y-4 text-gray-700">
            <p class="text-xl leading-relaxed">
              Enquire today about our services, or advice on how to best care
              for your car. Use the form to get in touch or call or email us
              directly. Check out our frequently asked questions for more
              information.
            </p>
            <p class="text-xl leading-relaxed">
              Enquire today about our services, or advice on how to best care
              for your car. Use the form to get in touch or call or email us
              directly. Check out our frequently asked questions for more
              information.
            </p>
          </div>

          <div class="mt-8 pt-6 border-t border-gray-300">
            <div class="space-y-3">
              <div class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-gray-800"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                  ></path>
                  <path
                    d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                  ></path>
                </svg>
                <span class="text-gray-800 text-lg">contact@contact.com</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg
                  class="w-5 h-5 text-gray-800"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                  ></path>
                </svg>
                <span class="text-gray-800 text-lg">(01) 2568 1575 65</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Sección derecha - Formulario -->
        <div class="p-8 md:p-12">
          <h3 class="text-xl font-bold text-gray-800 mb-8">
            CONSULT A SERVICE
          </h3>

          <form class="space-y-6" id="contactForm">
            <!-- Campos de entrada -->
            <div class="space-y-4">
              <div>
                <label class="block text-xl font-medium text-gray-700 mb-2">
                  Name <span class="text-blue-500">•</span>
                </label>
                <input
                  type="text"
                  name="nombre"
                  required
                  class="w-full border-b-2 border-gray-300 focus:border-blue-500 outline-none py-2 transition-colors text-xl"
                  placeholder="Your full name"
                />
              </div>

              <div>
                <label class="block text-xl font-medium text-gray-700 mb-2">
                  Phone <span class="text-blue-500">•</span>
                </label>
                <input
                  type="tel"
                  name="numero"
                  required
                  class="w-full border-b-2 border-gray-300 focus:border-blue-500 outline-none py-2 transition-colors text-xl"
                  placeholder="Your phone number"
                />
              </div>

              <div>
                <label class="block text-xl font-medium text-gray-700 mb-2">
                  Car <span class="text-blue-500">•</span>
                </label>
                <input
                  type="text"
                  name="carro"
                  required
                  class="w-full border-b-2 border-gray-300 focus:border-blue-500 outline-none py-2 transition-colors text-xl"
                  placeholder="Car brand"
                />
              </div>

              <div>
                <label class="block text-xl font-medium text-gray-700 mb-2">
                  Car Model <span class="text-blue-500">•</span>
                </label>
                <input
                  type="text"
                  name="modelo"
                  required
                  class="w-full border-b-2 border-gray-300 focus:border-blue-500 outline-none py-2 transition-colors text-xl"
                  placeholder="Car model"
                />
              </div>

              <div>
                <label class="block text-xl font-medium text-gray-700 mb-2">
                  Service Day <span class="text-blue-500">•</span>
                </label>
                <input
                  type="date"
                  name="fecha"
                  required
                  class="w-full border-b-2 border-gray-300 focus:border-blue-500 outline-none py-2 transition-colors text-xl"
                />
              </div>
            </div>

            <!-- Sección de servicios -->
            <div class="mt-8">
              <h4 class="text-xl font-bold text-gray-800 mb-4">
                SERVICE(S) CONSULT
              </h4>
              <div class="space-y-3">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="servicios"
                    value="exterior-hand-wash"
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                  />
                  <span class="text-xl text-gray-700"
                    >Manual Exterior Wash</span
                  >
                </label>

                <label class="flex items-center space-x-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="servicios"
                    value="automatic-tunnel-wash"
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                  />
                  <span class="text-xl text-gray-700"
                    >Automatic Tunnel Wash</span
                  >
                </label>

                <label class="flex items-center space-x-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="servicios"
                    value="seat-carpet-shampooing"
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                  />
                  <span class="text-xl text-gray-700"
                    >Shampoo of Seats and Carpets</span
                  >
                </label>

                <label class="flex items-center space-x-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="servicios"
                    value="window-cleaning"
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                  />
                  <span class="text-xl text-gray-700">Window Cleaning</span
                  >
                </label>

                <label class="flex items-center space-x-3 cursor-pointer">
                  <input
                    type="checkbox"
                    name="servicios"
                    value="waxing-polishing"
                    class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
                  />
                  <span class="text-xl text-gray-700">Waxing and Polishing</span>
                </label>
              </div>
            </div>

            <!-- Botón de envío -->
            <button
              type="submit"
              class="w-full mt-8 bg-white border-2 border-gray-300 text-gray-700 py-3 px-6 rounded-2xl font-medium hover:bg-primary hover:text-white transition duration-300 flex items-center justify-center space-x-2 text-2xl cursor-pointer group"
            >
              <span>Send</span>
              <svg
                class="w-5 h-5 transform transition-transform duration-300 group-hover:translate-x-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { handleFormSubmit } from "../utils/whatsapp";
  const form = document.getElementById("contactForm");
  if (form) {
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      handleFormSubmit(e, "51914019629");
    });
  }
</script>
