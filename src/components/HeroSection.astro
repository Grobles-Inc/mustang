---
const currentLocale = Astro.currentLocale || "en";
---

<section class="min-h-screen flex items-center bg-white">
  <div class="container mx-auto px-6 lg:px-12">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <!-- Left content -->
      <div
        class="flex-1 text-center lg:text-left mt-10 md:mt-0"
        data-aos="fade-right"
        data-aos-duration="1000"
        data-aos-easing="ease-out-cubic"
      >
        <h1
          class="text-4xl lg:text-6xl xl:text-7xl font-bold text-gray-900 mb-6 leading-tight"
        >
          <span
            class="block"
            data-aos="fade-down"
            data-aos-delay="300"
            data-aos-duration="800"
          >
            {currentLocale === "en" ? "Professional" : "Servicio"}
          </span>
          <span
            class="block"
            data-aos="fade-down"
            data-aos-delay="500"
            data-aos-duration="800"
          >
            {currentLocale === "en" ? "Cleaning Service" : "Profesional de"}
          </span>
          <span
            class="block"
            data-aos="fade-down"
            data-aos-delay="700"
            data-aos-duration="800"
          >
            {currentLocale === "en" ? "For Your Car" : "Limpieza Para Tu Auto"}
          </span>
        </h1>

        <p
          class="text-lg lg:text-xl text-gray-600 mb-8 max-w-lg lg:max-w-none"
          data-aos="fade-up"
          data-aos-delay="900"
          data-aos-duration="800"
          data-aos-easing="ease-out-back"
        >
          {
            currentLocale === "en"
              ? "At Mustang Mobile Care Wash, we are passionate about providing unparalleled car care. With a commitment to quality, eco-friendly practices, and customer satisfaction."
              : "En Mustang Mobile Car Wash, somos apasionados por brindar cuidado incomparable para autos. Con un compromiso de calidad, prácticas ecológicas y satisfacción del cliente."
          }
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center"
          data-aos="zoom-in"
          data-aos-delay="1100"
          data-aos-duration="600"
          data-aos-easing="ease-out-back"
        >
          <a href={currentLocale === "en" ? "/contact" : "/es/contact"}>
            <button
              class="btn btn-primary btn-xl px-8 py-4 text-lg font-semibold transform hover:scale-105 transition-transform duration-300"
              data-aos="flip-up"
              data-aos-delay="1300"
              data-aos-duration="800"
            >
              {currentLocale === "en" ? "Book A Service" : "Reservar Servicio"}
            </button>
          </a>
        </div>

        <!-- Partner logos -->
        <div
          class="flex items-center gap-8 mt-12 opacity-60 justify-center lg:justify-start"
          data-aos="fade-up"
          data-aos-delay="1500"
          data-aos-duration="600"
          data-aos-anchor-placement="top-bottom"
        >
          <span
            class="text-gray-500 font-medium"
            data-aos="slide-right"
            data-aos-delay="1700"
            data-aos-duration="800"
          >
            We come to you, we work all around Sacramento, CA.
          </span>
        </div>
      </div>

      <!-- Right image -->
      <div
        data-aos="fade-left"
        data-aos-delay="200"
        data-aos-duration="1200"
        data-aos-easing="ease-out-cubic"
      >
        <div
          class="relative"
          data-aos="zoom-in-up"
          data-aos-delay="400"
          data-aos-duration="1000"
          data-aos-easing="ease-out-back"
        >
          <img
            src="/HeroSection.png"
            alt="Professional car cleaning service"
            class="w-full h-auto mx-auto rounded-lg transform hover:scale-105 transition-transform duration-500"
            data-aos="flip-left"
            data-aos-delay="600"
            data-aos-duration="1200"
          />
        </div>
      </div>
    </div>
  </div>
</section>
